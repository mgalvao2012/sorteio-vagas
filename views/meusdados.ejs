  <script>
  var lista_unidades_escolhidas = []

  function apagaMensagem() {
    document.getElementById("mensagem").innerHTML = '';  
  }

  function unidadeClicada(valor) {
    var posicao = lista_unidades_escolhidas.indexOf(valor);
    if (posicao > -1) {
      document.getElementById(valor+'c').style.background = "#F2F2F2";
      document.getElementById(valor+'t').style.color = "#000000";
      lista_unidades_escolhidas.splice(posicao,1);
    } else {
      document.getElementById(valor+'c').style.background = "#008000";
      document.getElementById(valor+'t').style.color = "#FFFFFF";
      lista_unidades_escolhidas.push(valor);
      lista_unidades_escolhidas.sort();
    }
    var lista_unidades = document.getElementById("unidades_escolhidas");      
    lista_unidades.value = lista_unidades_escolhidas;
  }

  function abreSubsolo(subsolo) {
    var i;
    var x = document.getElementsByClassName("subsolo");
    for (i = 0; i < x.length; i++) {
      x[i].style.display = "none";  
    }
    var element = document.getElementById("S1b");
    element.classList.remove("aba-subsolo");
    var element = document.getElementById("S2b");
    element.classList.remove("aba-subsolo");
    var element = document.getElementById(subsolo+"b");
    element.classList.add("aba-subsolo");
    document.getElementById(subsolo).style.display = "grid";  
  }

  // Toggle between showing and hiding the sidebar when clicking the menu icon
  var mySidebar = document.getElementById("mySidebar");
  
  function w3_open() {
    if (mySidebar.style.display === 'block') {
      mySidebar.style.display = 'none';
    } else {
      mySidebar.style.display = 'block';
    }
  }
  
  // Close the sidebar with the close button
  function w3_close() {
      mySidebar.style.display = "none";
  }
  </script>
  
