        content: "";
        display: block;
        padding-bottom: 100%;
      }
       
      /* (E) TEXT BLOCK */
      .circle-txt {
        /* (E1) CENTER TEXT IN CIRCLE */
        position: absolute;
        bottom: 50%;
        width: 100%;
        text-align: center;
        color: #000;  
      }
